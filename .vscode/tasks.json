{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "clang++ build active file",
        "type": "shell",
        "command": "clang++",
        "args": [
            "-std=c++17",
            "-stdlib=libc++",
            "${file}",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}",
            "--debug"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }